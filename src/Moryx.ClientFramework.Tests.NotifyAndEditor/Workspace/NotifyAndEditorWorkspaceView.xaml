<UserControl x:Class="Moryx.ClientFramework.Tests.NotifyAndEditor.NotifyAndEditorWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="379" d:DesignWidth="515">

    <StackPanel Orientation="Vertical" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <EddieButton x:Name="CmdStopTimer"
                         Content="Stop Notification Timer"
                         Margin="30" Width="200" />

        <EddieButton x:Name="CmdResetNotifications"
                         Content="Reset Notifications"
                         Margin="30" Width="200" />

        <EddieButton x:Name="CmdStartTimer"
                         Content="Start Notification Timer"
                         Margin="30" Width="200" />

        <CheckBox x:Name="IsEditing" Content="Is in Editing Mode"
                  IsThreeState="False" Margin="30" />
    </StackPanel>
</UserControl>
