<Application x:Class="Moryx.Controls.Demo.App"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:demo="clr-namespace:Moryx.Controls.Demo">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <demo:DemoBootstrapper x:Key="Bootstrapper" />
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/Moryx.WpfToolkit;component/Themes/Generic.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/Moryx.WpfToolkit;component/Themes/Generic/Brushes.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/Moryx.WpfToolkit;component/Themes/Generic/Colors.xaml" />
                        <ResourceDictionary Source="Theme/DemoTheme.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
